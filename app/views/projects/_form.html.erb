    </div>
  <% end %>

<div class = "create_new_product_form">
  <div class="form-group-container">
    <form>
      <h4>About the Research Group</h4><br>
        <div class="form-group row">
          <%= f.label :author, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :author, class: "form-control resizedField", placeholder: "Institution/Author Name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :collaborators, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :collaborators, class: "form-control resizedField", placeholder: "List collaborators here" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :bio, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_area :bio, class: "form-control resizedTextBox", placeholder: "Add short artist bio here..." %>
        </div>
      </div>

     <h4>About the Project</h4><br>
      <div class="form-group row">
        <%= f.label :title, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control resizedField", placeholder: "Title" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :date_began, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :date_began, class: "form-control datetimepicker resizedField", :data => { :provide => :datetimepicker }  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :date_ended, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :date_ended, class: "form-control datetimepicker resizedField date_ended", :data => { :provide => :datetimepicker }  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label "Is this project ongoing?", class: "col-sm-2 col-form-label ongoing"%>
        <div class="col-sm-10">
          <%= f.check_box :ongoing, class: "checkbox" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control resizedTextBox", placeholder: "Add description of work here..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :analysis, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_area :analysis, class: "form-control resizedTextBox", placeholder: "Add analysis of work here..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :questions, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_area :questions, class: "form-control resizedTextBox", placeholder: "Add main questions here..." %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :website, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :website, class: "form-control resizedField", placeholder: "Add project website here..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :image_url, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :image_url, class: "form-control resizedField", type: "url", placeholder: "Image URL 1" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :img2_url, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :img2_url, class: "form-control resizedField", type: "url", placeholder: "Image URL 2" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :img3_url, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :img3_url, class: "form-control resizedField", type: "url", placeholder: "Image URL 3" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :img4_url, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :img4_url, class: "form-control resizedField", type: "url", placeholder: "Image URL 4" %>
        </div>
      </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>

      </div>
    </form>
  </div>
</div>
