<%= form_for(@ref) do |f| %>

<div class = "create_new_product_form">
  <div class="form-group-container">
    <form>
      <h4>Name of Event</h4><br>
        <div class="form-group row">
          <%= f.label :title, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control resizedField", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :first_name, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: "form-control resizedField", placeholder: "Author First Name" %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :last_name, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: "form-control resizedField", placeholder: "Author Last Name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :publisher, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :publisher, class: "form-control resizedField", placeholder: "Publisher Name" %>
          </div>
        </div>

     <h4>About the Article</h4><br>
      <div class="form-group row">
        <%= f.label :year_published, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :year_published, class: "form-control datetimepicker resizedField", :data => { :provide => :datetimepicker }  %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :format, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
            <%= f.text_field :format, class: "form-control resizedField", placeholder: "Article Format" %>
        </div>
      </div>
      

      <div class="form-group row">
        <%= f.label :pdf_url, class: "col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_field :pdf_url, class: "form-control resizedField", type: "url", placeholder: "URL to PDF" %>
        </div>
      </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>

  <% end %>